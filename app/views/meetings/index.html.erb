<p id="notice"><%= notice %></p>

<div class="col-xs-12">
  <h3>Check Our Calendar for Events</h3>
  <%= month_calendar events: @meetings do |date, meetings| %>
  <%= date.day %>

    <% meetings.each do |meeting| %>
      <ul>
        <li><%= meeting.name %></li>
      </ul>
    <% end %>
  <% end %>
</div>

<h1>Listing Meetings</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time.strftime("at %I:%M%p")  %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path %>
