<h1></h1>
<div class="border-form-div">
  <h2 class="form-titles">Sign up</h2>
  <%= form_for [@teacher, @student], url: new_user_student_path do |f| %>

    <div class="field">
      <%= f.label "First Name" %><br />
      <%= f.text_field :f_name %>
    </div>

    <div class="field">
      <%= f.label "Last Name" %><br />
      <%= f.text_field :l_name %>
    </div>

    <div class="field">
      <%= f.label :grade %><br />
      <%= f.text_field :grade %>
    </div>

    <div class="field">
      <%= f.label :notes %><br />
      <%= f.text_area :notes %>
    </div>

    <div class="actions">
      <%= f.submit "Add Student", :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>
